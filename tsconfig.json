{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"skipLibCheck": true,
		"lib": [
			"ESNEXT",
			"DOM"
		],
		"moduleResolution": "Node",
		"declaration": true,
		"emitDeclarationOnly": true,
		"strict": true,
		"outDir": "public/components",
		"suppressImplicitAnyIndexErrors": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"paths": {
			"@/*": [
				"./components/*"
			]
		},
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"jsx": "react-jsx",
		"typeRoots": [
			"./node_modules/@types",
			"./components/typings"
		]
	},
	"include": [
		"components/**/*.ts",
		"components/**/*.tsx",
		"components/typings/**/*.d.ts"
	]
}